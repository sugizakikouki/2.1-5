

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <h3>Users search for "<%= @word %>"</h3>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <h3>Books search for "<%= @word %>"</h3>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>